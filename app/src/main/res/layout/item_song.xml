<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingBottom="34dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_number"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="34dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="1"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:paddingEnd="32dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingRight="20dp"
        android:layout_marginTop="24dp"
        android:id="@+id/text_one"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Blank Space"
        app:layout_constraintStart_toEndOf="@id/text_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_two"
        android:paddingRight="35dp"
        app:layout_constraintStart_toStartOf="@id/text_one"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:text="Taylor Swift"
        app:layout_constraintTop_toBottomOf="@id/text_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/text_time"
        android:layout_marginStart="166dp"
        android:layout_marginTop="34dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_one"
        android:text="5:32"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>